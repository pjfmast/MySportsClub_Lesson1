@{ ViewData["Title"] = "Workouts Page"; }

@model IEnumerable<Workout>

<div class="text-center">
    <h1 class="display-4">Lijst van workouts</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Instructor</th>
                <th scope="col">Location</th>
                <th scope="col">Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Workout workout in Model)
            {
                <tr>
                    <th scope="row">@workout.ID</th>
                    <td>@workout.Title</td>
                    <td>@workout.Instructor</td>
                    <td>@workout.Location</td>
                    <td>@workout.StartTime tot @workout.EndTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
